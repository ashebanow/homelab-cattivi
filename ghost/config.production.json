{
  "url": "http://10.40.0.9:3080",
  "server": {
    "port": 2368,
    "host": "0.0.0.0"
  },
  "database": {
    "client": "mysql",
    "connection": {
      "host": "blog_mysql.docker.local",
      "port": 3306,
      "user": "root",
      "password": "${MYSQL_ROOT_PASSWORD}",
      "database": "ghost"
    }
  },
  "mail": {
    "transport": "Direct"
  },
  "logging": {
    "transports": [
      "stdout"
    ]
  },
  "paths": {
    "contentPath": "/var/lib/ghost/content"
  },
  "storage": {
    "active": "ghost-cloudinary-store",
    "ghost-cloudinary-store": {
      "cloud_name": "${CLOUDINARY_CLOUD_NAME}",
      "api_key": "${CLOUDINARY_API_KEY}",
      "api_secret": "${CLOUDINARY_API_SECRET}",
      "configuration": {
        "image": {
          "quality": "auto:good",
          "secure": "true"
        },
        "file": {
          "use_filename": "true",
          "unique_filename": "false",
          "phash": "true",
          "overwrite": "false",
          "invalidate": "true",
          "folder": "shebanator-blog-images",
          "tags": [ "blog", "shebanator" ]
        }       
      }
    }
  }
}
